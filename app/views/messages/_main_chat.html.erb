<div class="chat-room">
  <%= @room.title %>

  <div class="messages">
    <%= render partial: 'message', collection: @messages %>
  </div>

  <%= form_with model: @message, url: room_messages_path, local: true do |f|%>
    <div class='message-create-form'>
      <%= f.text_area :content, class: "message-name", id: "content-id", placeholder:"本文を入力" %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
      <div class='message-create-form-send'>
        <%= f.submit "送信", class: 'message-form-send-action' %>
      </div>
  <% end %>
</div>